  },
  "devDependencies": {
    "@types/jest": "^24.0.11",
    "@types/jsdom": "^12.2.3",
    "@types/nock": "^9.3.1",
    "@types/node": "^11.13.4",
    "@types/node-fetch": "^2.3.2",
    "@typescript-eslint/eslint-plugin": "^1.10.2",
    "@typescript-eslint/parser": "^1.10.2",
    "coveralls": "^3.0.3",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.3.0",
    "eslint-plugin-jest": "^22.6.4",
    "husky": "^1.3.1",
    "jest": "^24.5.0",
    "lint-staged": "^8.1.5",
    "nock": "^10.0.6",
    "prettier": "^1.17.0",
    "pretty-quick": "^1.10.0",
    "shx": "^0.3.2",
    "test-console": "^1.1.0",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.1.0",
    "typescript": "^3.4.3"
  },
  "bin": {
    "dps": "lib/cli.js",
    "dpsi": "lib/cli.js",
    "dopeoplesay": "lib/cli.js"
